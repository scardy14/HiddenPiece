<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.goodomen.hiddenpiece.model.mapper.MemberMapper">

	<select id="login" parameterType="org.goodomen.hiddenpiece.model.vo.MemberVO" resultType="org.goodomen.hiddenpiece.model.vo.MemberVO">
		select * from HP_Member where id=#{id} and password=#{password}
	</select>

	<insert id="registerMember" parameterType="org.goodomen.hiddenpiece.model.vo.MemberVO">
	insert into HP_Member 
	values(#{id},#{email},#{address},0,#{name},#{nickName},#{accountNo},#{password},#{tel},1)	
	</insert>

	<select id="findId" resultType="String">
		Select id from HP_Member where email=#{email} and address=#{address} and name=#{name} and tel=#{tel}
	</select>
	
	<select id="findPassword" resultType="String">
		Select password from HP_Member where id=#{id} and email=#{email} and name=#{name} and tel=#{tel}
	</select>
	
	<!-- 찜 목록 -->
	<select id="selectMyWishlist" resultType="org.goodomen.hiddenpiece.model.vo.AuctionBoardPostVO" parameterType="long">
		SELECT * FROM AuctionBoard_Likes WHERE id=#{value};
	</select>
	
</mapper>